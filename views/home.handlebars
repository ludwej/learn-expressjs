

          <div class="row">
            <form action="/action" method="POST">
            <div class="six columns">
              <h5>Bill type</h5>
              <label class="">
                <input type="radio" name="actionType" class="billItemTypeWithSettings" value="call">
                <span class="label-body">Call</span>
              </label>
              <label class="">
                <input type="radio" name="actionType" class="billItemTypeWithSettings" value="sms">
                <span class="label-body" >SMS</span>
              </label>
              <button class="button-primary" type="submit" name="button">Add</button>
            </form>

              <h5>Totals</h5>
                  <table>
                    <tr>
                      <td>
                        <a href="/actions/call">Call total</a>
                      </td>
                      <td>R<span class="callTotalSettings" >{{callTotal}}</span> </td>
                    </tr>
                    <tr>
                      <td>
                        <a href="/actions/sms">SMS total</a>
                      </td>
                      <td>R<span class="smsTotalSettings">{{smsTotal}}</span> </td>
                    </tr>
                    <tr>
                      <td>
                        <a href="/actions">Total</a>
                      </td>
                      <td> R<span class="{{color}}" >{{grandTotal}} </span> </td>
                    </tr>
                  </table>

            </div>
            <div class="six columns">
              <h5>Settings</h5>

              <form class="" action="/settings" method="post">
                <label for="exampleEmailInput">Call cost</label>
                <input class="u-full-width callCostSetting" name='callCost' type="number" placeholder="eg. 2.55" value="{{Call}}">
                <label for="exampleEmailInput">SMS cost</label>
                <input class="u-full-width smsCostSetting" name='smsCost' type="number" placeholder="eg. 0.65" value="{{Sms}}">
                <label for="">Warning level</label>
                <input class="u-full-width warningLevelSetting " name='warningLevel' type="number" placeholder="eg. 30.00" class="warningLevel" value="{{Warning}}">
                <label for="">Critical level</label>
                <input class="u-full-width criticalLevelSetting" name='criticalLevel' type="number" placeholder="eg. 65.00" value="{{Critical}}">
                <button class="button-primary updateSettings" type="submit" name="button">Update settings</button>
              </form>


            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
